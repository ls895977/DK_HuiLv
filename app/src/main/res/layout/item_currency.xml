<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_70"
        android:background="@drawable/cashier_boder1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_picture"
                android:layout_width="@dimen/dip_60"
                android:scaleType="fitXY"
                android:layout_height="@dimen/dip_40"
                android:layout_marginLeft="@dimen/dip_10"
               />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dip_10"
                android:text="CNY"
                android:textColor="@color/my_color"
                android:textSize="@dimen/fond_16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dip_200"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dip_10"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_input"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/dip_40"
                android:inputType="number"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="0.00"
                android:background="@null"
                android:textColor="@color/my_color"
                android:textColorHint="#e0e0e0"
                android:textSize="@dimen/fond_22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dip_10"
                android:text="美元$"
                android:textColor="#B1B7BF"
                android:textSize="@dimen/fond_10sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_0.1"
        android:background="#ECECEC" />
</LinearLayout>
