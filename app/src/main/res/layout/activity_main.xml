<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_65">

        <TextView
            android:id="@+id/bt_Bookkeeping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_15"
            android:paddingRight="@dimen/fond_15sp"
            android:paddingBottom="@dimen/dip_8"
            android:text="反馈"
            android:textColor="@color/my_color"
            android:textSize="@dimen/fond_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_15"
            android:paddingRight="@dimen/fond_15sp"
            android:paddingBottom="@dimen/dip_8"
            android:text="汇率换算"
            android:textColor="@color/my_color"
            android:textSize="@dimen/dip_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bt_commit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_10"
            android:paddingRight="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_8"
            android:src="@mipmap/yhl_logo_menu" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:background="#f0f0f0" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_0.1"
        android:background="#ECECEC" />


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dip_40">

                <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                    android:id="@+id/my_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bt_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_40"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:layout_marginTop="@dimen/dip_20"
                    android:layout_marginRight="@dimen/dip_40"
                    android:background="@drawable/cashier_boder"
                    android:gravity="center"
                    android:text="+添加货币"
                    android:textColor="@color/white" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
</LinearLayout>